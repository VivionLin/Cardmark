{
  "manifest_version": 3,
  "name": "Cardmark",
  "version": "1.0",
  "description": "Displays your Chrome bookmarks as cards on a new page.",
  "permissions": [
    "bookmarks",
    "storage",
    "favicon"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}